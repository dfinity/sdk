{
  "version": 1,
  "dfx": "{dfx_version}",
  "canisters": {
    "{project_name}": {
      "type": "motoko",
      "main": "src/{project_name}/main.mo",
      "args": "-no-check-ir"
    },
    "{project_name}_assets": {
      "type": "assets",
      "source": [
        "src/{project_name}_assets/assets"
      ],
      "dependencies": [
        "{project_name}"
      ]
    }
  },
  "defaults": {
    "build": {
      "packtool": "",
      "args": "--compacting-gc"
    }
  },
  "networks": {
    "local": {
      "bind": "127.0.0.1:8000",
      "type": "ephemeral"
    }
  }
}
