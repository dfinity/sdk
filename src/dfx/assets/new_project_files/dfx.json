{
  "version": 1,
  "dfx": "{dfx_version}",
  "canisters": {
    "{project_name}": {
      "type": "motoko",
      "main": "src/{project_name}/main.mo"
    },
    "{project_name}_assets": {
      "type": "assets",
      "source": [
        "src/{project_name}_assets/assets"
      ],
      "dependencies": [
        "{project_name}"
      ]
    }
  },
  "defaults": {
    "build": {
      "output": "canisters/",
      "packtool": ""
    },
    "start": {
      "port": 8000,
      "address": "127.0.0.1"
    }
  }
}
