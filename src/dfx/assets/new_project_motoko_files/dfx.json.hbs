{
  "version": 1,
  "dfx": "{{dfx_version}}",
  "canisters": {
    "{{project_name}}_backend": {
      "type": "motoko",
      "main": "src/{{project_name}}_backend/main.mo"
    }{{#if include_frontend}},
    "{{project_name}}_frontend": {
      "type": "assets",
      "source": ["src/{{project_name}}_frontend/assets"],
      "dependencies": ["{{project_name}}_backend"]
    }{{/if}}
  },
  "defaults": {
    "build": {
      "packtool": "",
      "args": ""
    }
  },
  "networks": {
    "local": {
      "bind": "127.0.0.1:8000",
      "type": "ephemeral"
    }
  }
}
