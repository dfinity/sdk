{
  "compilerOptions": {
    "incremental": true,
    "outDir": "ts-out/",
    "target": "ES2017",
    "module": "commonjs",
    "lib": [
      "dom",
      "es2017"
    ],
    "sourceMap": true,
    "strict": true,
    "paths": {
        "@dfinity/agent": [
            "../../src/agent/javascript/src",
            "node_modules/@dfinity/agent"
        ]
    },
    "baseUrl": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "types/*",
    "src/**/*.ts"
  ]
}
