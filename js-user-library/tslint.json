{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "jsRules": {},
  "linterOptions": {
    "exclude": [
      "src/IDL.js",
      "src/IDL.test.js"
    ]
  },
  "rules": {
    "array-type": [true, "generic"],
    "interface-name": [true, "never-prefix"],
    "max-line-length": [true, 80],
    "no-consecutive-blank-lines": [true, 2],
    "no-switch-case-fall-through": true,
    "object-literal-sort-keys": false
  },
  "rulesDirectory": []
}
